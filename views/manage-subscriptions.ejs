    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mt-3 mb-4 text-gray-800">Manage Subscriptions</h1>

                <% if (serverCount === 0) { %>
                    <p>You do not have any active subscriptions.</p>

                <% } else { %>


                    <% for (var i = 0; i < serverCount; i++) {%>
                        <table border=1 id="customers">
                            <tr>
                                <td>Server Name</td>
                                <td>Port</td>
                                <td>Cost per Month</td>
                                <td>Click to cancel subscription</td>
                            </tr>
                            <tr>

                                <form action="manage-subs" method="post">
                                    <td><%= names[i] %></td>
                                    <td><%= ports[i] %></td>
                                    <td>$14</td>
                                    <input type="hidden" name="port" value='<%= ports[i] %>'/>
                                    <% if (serverOnline[i] === true) {%>
                                        <td><input id="cancelBtn"  name="cancel" value="Cancel Subscription"  class="btn btn-primary" type="submit" /></td>
                                    <% } else {%>
                                        <td><p>Waiting for installation...</p></td>
                                    <% } %>
                                </form>
                            </tr>
                            <br>
                        </table>
                    <% } %>

<!--                    <form action="/customer-portal" method="POST">-->
<!--                        &lt;!&ndash; Note: If using PHP set the action to /customer-portal.php &ndash;&gt;-->
<!--                        <button type="submit">Customer Portal</button>-->
<!--                    </form>-->

                <% } %>



