        <!-- Main Content -->
        <div id="content">

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mt-3 mb-4 text-gray-800">Control Panel</h1>

                <div class="tab">
                    <button class="tablinks" onclick="openTab(event, 'connectSettings')">Connection Details</button>
                    <button class="tablinks" onclick="openTab(event, 'gameSettings')">Server Config</button>
                    <button class="tablinks" onclick="openTab(event, 'serverSettings')">Server Tools</button>
                </div>

                <!-- Tab content -->
                <div id="connectSettings" class="tabcontent" style="display:block">
                    <p>Server connection URI: <b>68.183.156.152:<%= port %></b></p>
                    <p>Server Password: <b><%= serverPassword %></b></p>
                    <p>FTP username: <b><%= ftpUser %></b> </p>
                    <p>FTP password: <b><%= ftpPassword %></b></p>
                    <p>FTP port: <b>21</b></p>
                    <p></p>
                </div>

                <div id="gameSettings" class="tabcontent" style="display:none">
                    <form action="/game-settings" method="post">
                         <label for="sName">Server Name: </label>
                         <input type="text" id="sName" name="serverName" value='<%= sName %>'/>
                         <br>
                         <label for="sPassword">Server Password: </label>
                         <input type="text" id="sPassword" name="serverPassword" value='<%= serverPassword %>'/>
                         <br>
                         <label for="public">Server Visibility: </label>
                         <input type="radio" id="public" name="visibility" value="1" checked/>
                         <label for="public">1 (visible to everyone)</label>
                         <input type="radio" id="private" name="visibility" value="0"/>
                         <label for="private">2 (invisible)</label>
                         <br>
                         <label for="world">World name: </label>
                         <input type="text" id="world" name="worldName" value='<%= world %>'/>
                         <br>
                         <input type="hidden" name="portNumber" value='<%= port %>'/>
                         <input type="hidden" name="ftp" value='<%= ftpUser %>'/>
                         <br>
                         <input type="submit" name="submit" value="Save changes and restart server"/>
                    </form>
                </div>

                <div id="serverSettings" class="tabcontent" style="display:none">
                    <form action="/server-tools" method="post">
                        <input type="submit" id="resServer" name="buttonClick" value="Restart Server"/>
                        <label for="resServer"> Click to restart your server</label>
                        <br>
                        <br>
                        <input type="submit" id="upServer" name="buttonClick" value="Update Server"/>
                        <label for=upServer> Check for the latest updates</label>
                        <br><br>
                        <% if (currentTime >= backupRenew) { %>
                            <input type="submit" id="backupCreate" name="buttonClick" value="Backup Server"/>
                            <label for="backupCreate"> Backup your server</label>
                        <% } else { %>
                            <button id="disabledButton" type="button" disabled>Backup Server</button>
                            <label for="disabledButton"> Disabled temporarily (only 1 backup per day)</label>
                        <% } %>
                        <br>
                        <br>
                        <input type="submit" id="stopServer" name="buttonClick" value="Stop Server"/>
                        <label for="stopServer"> Stops your server</label>
                        <input type="hidden" name="ftp2" value='<%= ftpUser %>'/>
                    </form>
                </div>

            </div>

            <script>
                function openTab(evt, tabName) {
                    // Declare all variables
                    var i, tabcontent, tablinks;

                    // Get all elements with class="tabcontent" and hide them
                    tabcontent = document.getElementsByClassName("tabcontent");
                    for (i = 0; i < tabcontent.length; i++) {
                        tabcontent[i].style.display = "none";
                    }

                    // Get all elements with class="tablinks" and remove the class "active"
                    tablinks = document.getElementsByClassName("tablinks");
                    for (i = 0; i < tablinks.length; i++) {
                        tablinks[i].className = tablinks[i].className.replace(" active", "");
                    }

                    // Show the current tab, and add an "active" class to the button that opened the tab
                    document.getElementById(tabName).style.display = "block";
                    evt.currentTarget.className += " active";
                }
            </script>
