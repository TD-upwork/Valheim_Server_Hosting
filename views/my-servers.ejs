                <% if (serverCount === 0) {%>
                    <p>You must purchase a server first before gaining access to the control panel!</p>

                <% } else {%>
                    <% for (var i = 0; i<serverCount; i++) {%>

                        <table border=1 id="customers">
                            <tr>
                                <td>Server Name</td>
                                <td>Port</td>
                                <td>Status</td>
                                <td>Cpanel</td>
                            </tr>
                            <tr>
                                <td id='1<%= ports[i]%>'>Checking with server...</td>
                                <td id='2<%= ports[i]%>'>Checking with server...</td>
                                <td id='3<%= ports[i]%>'>Checking with server...</td>
                                <td id='4<%= ports[i]%>'>Checking with server...</td>
                            </tr>

                        </table>
                        <script src="/socket.io/socket.io.js"></script>
                        <script>

                            var startSocket = function() {
                                var socket = io();

                                socket.on('connect', function() {

                                });

                                socket.on('connect_error', function(err) {

                                });

                                socket.on('connect_timeout', function(err) {

                                });

                                var x = function() {

                                    socket.emit("initPort", '<%= ports[i]%>');
                                }

                                var startInterval = setInterval(x, 2000)

                                socket.on("serverUpdate", function(output) {

                                    if (output === '<%= ports[i]%>') {
                                        document.getElementById('1<%= ports[i]%>').innerHTML = '<%= names[i]%>'
                                        document.getElementById('2<%= ports[i]%>').innerHTML = <%= ports[i] %>
                                            document.getElementById('3<%= ports[i]%>').innerHTML = "Server is ready!"
                                        document.getElementById('4<%= ports[i]%>').innerHTML = "<a href='/control-panel' class='btn btn-green' id='5<%= ports[i]%>'>Go to control panel</a>"
                                        document.getElementById('5<%= ports[i]%>').href = "/control-panel/" + '<%= ports[i]%>'
                                        clearInterval(startInterval)
                                    } else {
                                        document.getElementById('1<%= ports[i]%>').innerHTML = '<div class="loader"></div>'
                                        document.getElementById('4<%= ports[i]%>').innerHTML = '<div class="loader"></div>'
                                        document.getElementById('2<%= ports[i]%>').innerHTML = '<div class="loader"></div>'
                                        document.getElementById('3<%= ports[i]%>').innerHTML = "Installing...please wait"
                                    }
                                })
                            }

                            startSocket();

                        </script>
                        <br>
                    <% } %>
                <% } %>


